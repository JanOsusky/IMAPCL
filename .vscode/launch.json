{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch 1.0",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main", // Path to your target executable
            "args": [
                "eva.fit.vutbr.cz",
                "-o ",
                "maildir",
                "-a",
                "authfile",
                "-T"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Makefile", // Ensure that the build task is run before debugging
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this if needed
            "logging": {
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}